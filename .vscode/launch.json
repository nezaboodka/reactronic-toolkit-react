  "version": "0.2.0",
  "configurations": [
    {
      "name": "server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/server.js",
      "sourceMaps": true,
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    },
    {
      "name": "chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:1234",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}",
      // "sourceMapPathOverrides": {
      //   "*": "${webRoot}/demo*"
      // },
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
