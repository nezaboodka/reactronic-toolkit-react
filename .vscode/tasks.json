{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All  -  tsc & eslint",
      "type": "shell",
      "command": "npm run build",
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Install Modules  -  npm",
      "type": "shell",
      "command": "npm install '&' yarn install",
      "isBackground": true,
      "group": "build",
      "problemMatcher": [],
      "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": true,
          "panel": "shared"
      }
    },
    {
      "label": "Fix Rules  -  eslint",
      "type": "shell",
      "command": "npm run fix",
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Webpack Server  -  webpack",
      "type": "shell",
      "command": "npm run webpack-start",
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "isBackground": true,
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Parcel Server  -  parcel",
      "type": "shell",
      "command": "npm run parcel-start",
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
