// Place your settings in this file to overwrite default and user settings.
{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "files.exclude": {
    "node_modules/": true,
    "build/": true,
  },
  "files.watcherExclude": {
    "node_modules/": true,
    "build/": true,
  },
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "eslint.validate": [
    { "language": "javascript", "autoFix": true },
    { "language": "javascriptreact", "autoFix": true },
    { "language": "typescript", "autoFix": true },
    { "language": "typescriptreact", "autoFix": true },
  ],
  "cSpell.ignorePaths": [
    "node_modules",
    "**/node_modules",
    "**/node_modules/**",
    "node_modules/**",
    "vscode-extension",
    ".git",
    "CODE_OF_CONDUCT.md",
    "package-lock.json",
    "yarn.lock",
  ],
  "cSpell.words": [
    "Arial",
    "Asynchrony",
    "Calibri",
    "Chetyrko",
    "Reactronic's",
    "Roadmap",
    "Stateful",
    "Tahoma",
    "Transactionally",
    "Yury",
    "argsx",
    "boilerplating",
    "browserslist",
    "checkin",
    "circleci",
    "coord",
    "dataport",
    "decoratedclass",
    "decoratedfield",
    "deviceport",
    "devtool",
    "disp",
    "enqueues",
    "forin",
    "gmail",
    "lcovonly",
    "monospace",
    "multiline",
    "nezaboodka",
    "nothrow",
    "notran",
    "npmjs",
    "npmrc",
    "parens",
    "polyfill",
    "proto",
    "quotemark",
    "reactronic",
    "restyler",
    "scrollbar",
    "sidebyside",
    "typeless",
    "unmount",
    "woff",
    "ychetyrko"
  ]
}
